
<div class="container-fluid">
	
	<div class="row spacerTop50px">

		<!-- Title -->
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			<h1><strong>RECIPE</strong>SEARCH V2</h1>
			<p class="indexSubtitle">Powered by Food2Fork.com</p>
		</div>



		<!-- Search -->
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

			<%= form_tag @recipe do%>

				<!-- search field -->
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 spacerTop10px">				

						<%= text_field_tag :looking_for, nil, placeholder: "Enter your ingredients: chicken asparagus paprika etc", class: "form-control" %>
					
				</div>

				<!-- spacer -->
				<div class="col-lg-7 col-md-4 col-sm-0 col-xs-0 spacerTop10px">

				</div>	

				<!-- search button -->
				<div class="col-lg-5 col-md-8 col-sm-12 col-xs-12 spacerTop10px">
					<%= submit_tag("Search For Recipes", :class=>"btnRed btn btn-block") %>

				</div>	

			<% end %>

		</div>

	</div>	

	<div class="row">
		<div class="col-lg-12 col-md- col-sm-12 col-xs-12 text-xs-center spacerTop30px">
			<strong><h4>Search results for "<%= @search_term %>" </h4></strong>
		</div>
	</div>

	<% if (@recipes.nil? or @recipes == []) %>

		<p><h2>No recipes found... Sorry</h2></p>

	<% else %>

		<!-- Recipe Listing -->
		<div class="card-columns text-xs-center">

			<% @recipes.each do |course| %>

				<div class = "card indexRecipeCard shadowEffect">

					<!-- image -->

					<div class = "recipeCardImage">					
						
						<div class = "recipeCardImageHoverContainer">

							<div class ="recipeCardIconContainer">

								<a href="" title="Save to your recipe list"><i class="fa fa-plus-circle cardIcon" aria-hidden="true"></i></a>

							</div>
						</div>

					
						<%= link_to(image_tag(course["image_url"], class: "card-img-top img-responsive text-center width-100-percent"),"#", data: {toggle: "modal", target: "#myModal", recipeid:course["recipe_id"]})%> 


					</div>
						
					<!-- recipe name -->
					<div class="card-block indexRecipeTitle text-xs-center">

						<%= link_to(course["title"].html_safe,course["source_url"], :target => "_blank")%><br/>
						<%= course["recipe_id"] %>

					</div>

										
				
				</div> 
			
			<% end %>	
				
		</div> 

	<% end %>	

</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Ingredients</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



